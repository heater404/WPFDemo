<Window
    x:Class="WriteableBitmap类.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WriteableBitmap类"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="700"
    Loaded="Window_Loaded"
    Height="600"
    KeyDown="MyImage_KeyDown"
    mc:Ignorable="d">

    <Border BorderThickness="1" BorderBrush="Black"
        Width="640"
        Height="480"
        ClipToBounds="True">
        <Image
            x:Name="myImage"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            MouseMove="MyImage_MouseMove"
            MouseLeftButtonDown="MyImage_MouseLeftButtonDown"
            MouseRightButtonDown="MyImage_MouseRightButtonDown"
            MouseWheel="MyImage_MouseWheel"
            Stretch="None" />
    </Border>
</Window>
